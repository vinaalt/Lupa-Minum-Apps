<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".view.ScheduleSettingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000"
            android:paddingTop="24dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/txt_sapa_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lunasima"
                android:paddingBottom="5dp"
                android:text="Yuk Atur Jadwal!"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_desc_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_sapa_schedule"
                android:fontFamily="@font/lunasima"
                android:paddingBottom="5dp"
                android:text="Rentang Waktu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_below="@id/txt_desc_schedule">

                <RadioGroup
                    android:id="@+id/radioGroupOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioOption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Menit"
                        android:textColor="#FFFFFF"
                        android:tag="15"/>

                    <RadioButton
                        android:id="@+id/radioOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 Menit"
                        android:textColor="#FFFFFF"
                        android:tag="30"/>

                    <RadioButton
                        android:id="@+id/radioOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 Menit"
                        android:textColor="#FFFFFF"
                        android:tag="60"/>

                    <RadioButton
                        android:id="@+id/lainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rentang Waktu Lain"
                        android:textColor="#FFFFFF"/>
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_schedule_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txt_label_identity"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_input_schedule_range"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="30dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/rounded_editted_text"
                        android:hint="Ketikkan Rentang Waktu"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_simpan_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Simpan"
                    android:textColor="@android:color/white"
                    android:elevation="10dp"
                    android:translationZ="12dp"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:autoLink="web"
                    android:layout_below="@id/input_identity"
                    android:layout_alignParentEnd="true"
                    app:rippleColor="#801F6B86"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#1F6B86" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>